{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^snap/snapcraft\\.yaml$/"
      ],
      "matchStrings": [
        "version: +?['\"]?(?<currentVersion>v[^'\"\n]*)['\"]?"
      ],
      "depNameTemplate": "zwave-js/zwave-js-ui",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^snap/snapcraft\\.yaml$/"
      ],
      "matchStrings": [
        "npm-node-version: (?<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "zwave-js-ui-node-version",
      "datasourceTemplate": "custom.nodejs-zwave-js-ui",
      // "autoReplaceStringTemplate": "npm-node-version: {{{newValue}}}",
      "registryUrlTemplate": "https://raw.githubusercontent.com/zwave-js/zwave-js-ui/refs/tags/{{{currentVersion}}}/docker/Dockerfile"
    }
  ],
  "customDatasources": {
    "nodejs-zwave-js-ui": {
      "transformTemplates": [
        "{\"releases\": [{\"version\": $capture(\"ARG NODE_VERSION=([\\\\d.]+)\"), \"sourceUrl\": \"https://github.com/zwave-js/zwave-js-ui\"}]}"
      ]
    }
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "zwave-js/zwave-js-ui"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "commitMessageTopic": "zwave-js-ui",
      "labels": [
        "dependencies",
        "no-stale"
      ],
      "commitMessageExtra": "to {{newVersion}}",
      "prBodyNotes": [
        "This PR updates the version of zwave-js-ui in the snapcraft.yaml file to match the latest GitHub release."
      ]
    }
  ]
}
