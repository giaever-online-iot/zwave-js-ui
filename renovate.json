{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^snap/snapcraft\\.yaml$/"
      ],
      "matchStrings": [
        "version: +?['\"]?(?<currentVersion>v[^'\"\n]*)['\"]?"
      ],
      "depNameTemplate": "zwave-js/zwave-js-ui",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/^snap/snapcraft\\.yaml$/"
      ],
      "matchStrings": [
        "version: (?P<version>v[^\\s]+)(?:[\\s\\S]*?)npm-node-version: (?P<currentValue>\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "npm-node-version",
      "datasourceTemplate": "custom.npm-node-version"
    }
  ],
  "customDatasources": {
    "npm-node-version": {
      "defaultRegistryUrlTemplate": "https://raw.githubusercontent.com/zwave-js/zwave-js-ui/refs/tags/{{{currentValue}}}/docker/Dockerfile",
      "transformTemplates": [
        "{\"releases\": [{\"version\": $capture(\"ARG NODE_VERSION=([\\d.]+)\")}]}"
      ]
    }
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "zwave-js/zwave-js-ui",
        "zwave-js-ui-node-version"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "commitMessageTopic": "zwave-js-ui",
      "labels": [
        "dependencies",
        "no-stale"
      ],
      "commitMessageExtra": "to {{newVersion}}",
      "prBodyNotes": [
        "This PR updates the version of zwave-js-ui in the snapcraft.yaml file to match the latest GitHub release."
      ]
    }
  ]
}
